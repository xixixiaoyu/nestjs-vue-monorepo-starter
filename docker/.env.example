# Docker Compose 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# 项目配置
COMPOSE_PROJECT_NAME=nest-vue

# 数据库配置
DB_NAME=appdb
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_PORT=5432

# Redis 配置
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# 服务端口配置
SERVER_PORT=3000
WEB_PORT=80

# 开发工具端口
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# Nginx 配置（生产环境）
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 应用配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_SWAGGER=false

# 前端配置
VITE_API_BASE_URL=https://api.yourdomain.com

# 资源限制配置（生产环境）
SERVER_CPU_LIMIT=1.0
SERVER_MEMORY_LIMIT=1G
SERVER_CPU_RESERVATION=0.5
SERVER_MEMORY_RESERVATION=512M

WEB_CPU_LIMIT=0.5
WEB_MEMORY_LIMIT=256M
WEB_CPU_RESERVATION=0.25
WEB_MEMORY_RESERVATION=128M

NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_RESERVATION=0.25
NGINX_MEMORY_RESERVATION=128M