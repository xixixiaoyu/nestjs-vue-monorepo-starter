# Docker 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 项目配置
COMPOSE_PROJECT_NAME=nest-vue

# 数据库配置
DB_NAME=appdb
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Redis 配置
REDIS_PASSWORD=
REDIS_PORT=6379

# 服务器配置
SERVER_PORT=3000
WEB_PORT=5173

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Swagger 配置
ENABLE_SWAGGER=true

# 开发工具端口
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# 生产环境配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 资源限制
SERVER_CPU_LIMIT=1.0
SERVER_MEMORY_LIMIT=1G
SERVER_CPU_RESERVATION=0.5
SERVER_MEMORY_RESERVATION=512M

WEB_CPU_LIMIT=0.5
WEB_MEMORY_LIMIT=256M
WEB_CPU_RESERVATION=0.25
WEB_MEMORY_RESERVATION=128M

NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_RESERVATION=0.25
NGINX_MEMORY_RESERVATION=128M

# 前端配置
VITE_API_BASE_URL=http://localhost:3000